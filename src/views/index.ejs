<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Device Monitoring Dashboard</title>
    <link rel="stylesheet" href="/css/tailwind.css">
    <script src="/js/chart.js"></script>
    <script src="/js/main.js" defer></script>
    <script src="/icons/lucide-icons.js" defer></script>
</head>
<body class="bg-gray-100">
    <%- include('layouts/main.ejs') %>
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold mb-4">Device Monitoring Dashboard</h1>
        <div id="network-speed" class="mb-4">
            <h2 class="text-xl font-semibold">Network Speed</h2>
            <div class="flex space-x-4">
                <div class="bg-white shadow rounded-lg p-4 flex-1">
                    <h3 class="text-lg">Download Speed</h3>
                    <p id="download-speed" class="text-2xl">0 Mbps</p>
                </div>
                <div class="bg-white shadow rounded-lg p-4 flex-1">
                    <h3 class="text-lg">Upload Speed</h3>
                    <p id="upload-speed" class="text-2xl">0 Mbps</p>
                </div>
            </div>
        </div>
        <div id="isp-info" class="mb-4">
            <h2 class="text-xl font-semibold">ISP Information</h2>
            <p id="isp-name" class="text-lg">Loading...</p>
        </div>
        <div id="charts" class="mb-4">
            <h2 class="text-xl font-semibold">Network Usage</h2>
            <canvas id="networkChart"></canvas>
        </div>
    </div>
    <%- include('partials/footer.ejs') %>
</body>
</html>